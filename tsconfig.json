{
    "include": [
        "./**/*.ts"
    ],
    "exclude": [],
    "compilerOptions": {
        "types": [
            "mocha",
            "chai"
        ],
        "lib": [
            "es6",
            "dom"
        ],
        "target": "es6",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
    }
}